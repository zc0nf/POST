#!/bin/bash

BASEPATH=$(pwd)
SCRIPT=${0}
SCRIPT_NAME=${SCRIPT##*/}
SCRIPT_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source "$SCRIPT_PATH"/../conf/common.sh
source "$SCRIPT_PATH"/../conf/conf.sh

usage()
{

cat << EOF
usage: $0 options/

OPTIONS:
  -h  Voir ce message d\'aide
  -f  Fichier
EOF
}

while getopts "hf:" opt; do
	case $opt in
	"h")
		usage
		exit 1
	;;

	"f")
		FICHIER="$OPTARG"	
	;;

	"?")
		echo "Invalid option: -$OPTARG"
		usage
		exit 1
	;;
esac
done

shift $(($OPTIND-1))

"$SCRIPT_PATH"/../tools/nzbverif.py -s ${NGHOST} -u ${NGUSER} -P ${NGPASS} -f "${FICHIER}"


